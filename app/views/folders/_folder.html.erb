<tr id="<%= dom_id(folder) %>">
  <td>
    <i class="bi bi-folder"></i> <%= link_to folder.name, folder_path(folder) %>
  </td>
  <td>
    <%= button_to folder, method: :delete, class: "btn btn-danger d-inline-block me-2", form: { data: { turbo_confirm: "Are you sure?" }, class: "d-inline-block" } do %>
       <i class="bi bi-trash-fill" title="Delete"></i>
    <% end %>
  </td>
</tr>
